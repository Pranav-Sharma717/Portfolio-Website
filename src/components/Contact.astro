---
import { CenterTitle } from "./UI";
import { ContactForm } from "./Preact";
import { ContactArt, GithubIcon, LinkedinIcon } from "../assets/SVGs";
import { Image } from "astro:assets";
---

<section
    id="contact"
    class="w-full min-h-screen mb-16 lg:mb-[15em] px-6 py-4 pt-14 bg-background"
>
    <CenterTitle title="Contact" color="primary" />

    <div class="w-full flex_center flex-col p-4 text-[1.2em] text-center">
        <h3
            class="Fade_Up gradientText font-ubuntu text-[2rem] lg:text-[2.4rem]"
        >
            Let's collaborate!
        </h3>
        <p class="Fade_Up">Contact me to discuss your web development needs</p>
        <p class="Fade_Up">or just to say hello. ðŸ˜‰</p>
    </div>

    <div
        class="flex_center flex-col lg:flex-row w-full h-full gap-4 lg:gap-10 lg:px-20 pt-8 pb-16"
    >
        <div class="relative w-full flex_center flex-col">
            <div
                class="Fade_Up w-full max-w-[350px] scale-[0.9] lg:scale-1 lg:max-w-[450px] aspect-square rounded-full border-2 border-dashed border-contactSocialColor mb-8 md:mb-0 md:mt-7"
                id="socialCircle"
            >
                <a
                    href="https://in.linkedin.com/in/g-v-pranav-sharma"
                    class="socialIcon absolute w-12 lg:w-16 aspect-square flex_center p-2 lg:p-4 bg-background outline-dashed outline-2 outline-contactSocialColor rounded-full"
                    title="LinkedIn"
                    target="_blank"
                    aria-label="LinkedIn"
                    rel="noreferrer"
                >
                    <Image src={LinkedinIcon} alt="LinkedIn" width={30} height={30} />
                </a>
                <a
                    href="https://github.com/PranavSharma717"
                    class="socialIcon absolute w-12 lg:w-16 aspect-square flex_center p-2 lg:p-4 bg-background outline-dashed outline-2 outline-contactSocialColor rounded-full"
                    title="GitHub"
                    target="_blank"
                    aria-label="GitHub"
                    rel="noreferrer"
                >
                    <Image src={GithubIcon} alt="GitHub" width={30} height={30} />
                </a>
                <a
                    href="mailto:gvpranav06@gmail.com"
                    class="socialIcon absolute w-12 lg:w-16 aspect-square flex_center p-2 lg:p-4 bg-background outline-dashed outline-2 outline-contactSocialColor rounded-full"
                    title="Gmail"
                    target="_blank"
                    aria-label="Gmail"
                    rel="noreferrer"
                >
                    <svg
                        stroke="currentColor"
                        fill="currentColor"
                        style="color: var(--heroSocialColor);"
                        stroke-width="0"
                        role="img"
                        viewBox="0 0 24 24"
                        height="30"
                        width="30"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <title></title>
                        <path
                            d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z"
                        >
                        </path>
                    </svg>
                </a>
            </div>

            <Image
                class="Fade_Up absolute bottom-10 md:bottom-2 w-[300px] md:w-[400px]"
                src={ContactArt}
                alt="ContactArt"
                loading="lazy"
            />
        </div>

        <ContactForm client:load />
    </div>
</section>

<script is:inline type="module">
    document.addEventListener("DOMContentLoaded", () => {
        const center = document.querySelector("#socialCircle");
        const images = document.querySelectorAll(".socialIcon");

        if (!center || !images.length) {
            console.error("Social circle or icons not found.");
            return;
        }

        const iconSize = images[0].clientWidth;
        const radius = Math.ceil((center.clientWidth + 2) / 2);

        images.forEach((image, index) => {
            const angle = (index / (images.length - 1)) * Math.PI;
            const x = Math.cos(-angle) * radius - iconSize / 2;
            const y = Math.sin(-angle) * radius - iconSize / 2;

            const imageStyle = image.style;
            const centerWidth = center.offsetWidth;
            const centerHeight = center.offsetHeight;

            imageStyle.left = `${centerWidth / 2 + x}px`;
            imageStyle.top = `${centerHeight / 2 + y}px`;
        });
    });
</script>
